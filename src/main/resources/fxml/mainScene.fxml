<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.Scene?>

<Scene fx:controller="de.quastenflossler.deployment.Controller" xmlns:fx="http://javafx.com/fxml/1" width="400" height="250">

    <BorderPane id="splashScreenBorderPane">

        <padding>
            <Insets top="5" right="5" bottom="5" left="5"/>
        </padding>

        <center>

            <GridPane alignment="TOP_LEFT" vgap="5" hgap="5">

                <padding>
                    <Insets top="5" right="5" bottom="5" left="5"/>
                </padding>

                <Label fx:id="friendLabel" text="Choose a friend:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField fx:id="friendTextField" minWidth="150" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label fx:id="adjectiveLabel" text="Choose an adjective:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <TextField fx:id="adjectiveTextField" minWidth="150" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <Button fx:id="magicButton" text="Do it" GridPane.columnIndex="1" GridPane.rowIndex="3"
                        onAction="#handleMagicAction" minWidth="150"/>

            </GridPane>

        </center>

    </BorderPane>

</Scene>